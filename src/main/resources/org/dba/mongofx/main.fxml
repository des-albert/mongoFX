<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0"
         styleClass="root" stylesheets="@../../../css/style.css"
         prefWidth="650.0" tabClosingPolicy="UNAVAILABLE"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.dba.mongofx.MainController">
    <Tab text="Main">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="506.0" prefWidth="679.0">
            <Button fx:id="buttonLoad" layoutX="344.0" layoutY="37.0" mnemonicParsing="false" onAction="#loadData"
                    text="Load Data"/>
            <Button fx:id="buttonStore" layoutX="19.0" layoutY="280.0" mnemonicParsing="false"
                    onAction="#storeConfigData" text="Store Configs"/>
            <Button fx:id="buttonQuit" layoutX="34.0" layoutY="428.0" mnemonicParsing="false" onAction="#quit"
                    text="Quit"/>
            <TextField fx:id="textFieldUCID" layoutX="151.0" layoutY="40.0" promptText="ucid"/>
            <TextField fx:id="textFieldCustomer" layoutX="151.0" layoutY="108.0" prefHeight="25.0" prefWidth="385.0"/>
            <TextField fx:id="textFieldOPE" layoutX="151.0" layoutY="188.0" prefHeight="25.0" prefWidth="149.0"/>
            <TextField fx:id="textFieldFileName" layoutX="151.0" layoutY="229.0" prefHeight="25.0" prefWidth="391.0"/>
            <TextField fx:id="textFieldProduct" layoutX="151.0" layoutY="147.0" prefHeight="25.0" prefWidth="149.0"/>
            <Label layoutX="32.0" layoutY="112.0" stylesheets="@../../../css/style.css" text="Customer"/>
            <Label layoutX="33.0" layoutY="192.0" stylesheets="@../../../css/style.css" text="OPE"/>
            <Label layoutX="36.0" layoutY="233.0" prefHeight="18.0" prefWidth="63.0"/>
            <Label layoutX="33.0" layoutY="151.0" prefHeight="18.0" prefWidth="81.0"
                   stylesheets="@../../../css/style.css" text="Product"/>
            <TextArea fx:id="textAreaResult" layoutX="148.0" layoutY="280.0" prefHeight="185.0" prefWidth="391.0"/>


        </AnchorPane>
    </Tab>

    <Tab text="Summary">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="450.0" prefWidth="1000.0">
            <TableView fx:id="productTableView" layoutX="65.0" layoutY="102.0" prefHeight="211.0" prefWidth="497.0">
                <columns>
                    <TableColumn fx:id="productColumn" prefWidth="350.0" text="Product"/>
                    <TableColumn fx:id="countColumn" prefWidth="150.0" text="Total Configs"/>
                </columns>
            </TableView>
            <ComboBox fx:id="monthComboBox" layoutX="324.0" layoutY="34.0" prefWidth="150.0" promptText="Select Month"/>
            <TextField fx:id="yearTextField" layoutX="217.0" layoutY="34.0" prefWidth="70.0" promptText="Year"/>
            <Button fx:id="reportButton" layoutX="113.0" layoutY="31.0" onAction="#generateProductReport"
                    text="Generate"/>
        </AnchorPane>
    </Tab>
</TabPane>
